<div class="row">
  <div class="col-md-2 col-xs-2">
    <section class="user_info center">
      <%= gravatar_for(comment.user, size: 60)%>
    </section>
  </div>
  <div class="col-md-8 col-xs-8 well">
    <p><%= comment.description %></p>
    <p>
      <span class="quite"><small> Created: <%= time_ago_in_words(comment.created_at) %> ago by <%= comment.user.name %></small></span>
    </p>
  </div>
</div>
